<html class="bg-white dark:bg-gray-900">
  <%- include('./components/head') %> <%- include('./components/navbar') %> <%-
  include('./components/variables') %> <%- include('./components/resources') %>
  <section
    class="text-gray-600 bg-white dark:text-gray-400 dark:bg-gray-900 body-font min-h-screen"
  >
    <form
      action="/store/buy_resources"
      method="POST"
      class="container px-5 py-12 mx-auto flex flex-wrap items-center"
    >
      <div
        class="lg:w-3/6 md:w-1/2 bg-gray-100 dark:bg-gray-800 dark:bg-opacity-50 rounded-lg p-8 flex flex-col md:mx-auto w-full mt-10 md:mt-0"
      >
        <h2
          class="text-gray-900 dark:text-white text-lg font-medium title-font mb-5"
        >
          Store&nbsp;<span
            class="bg-gray-100 text-gray-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300"
            ><%= data.db_info.coins %> coins</span
          >
        </h2>
        <% if (settings.store.cpu.enabled) { %>
        <div class="mb-4">
          <label for="cpu" class="leading-7 text-sm text-gray-400"
            >CPU&nbsp;<span
              class="bg-gray-100 text-gray-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300"
              ><%= current.cpu %>%/<%= total.cpu %>%</span
            ></label
          >
          <input
            type="text"
            id="cpu"
            name="cpu"
            class="w-full bg-white dark:bg-gray-600 dark:bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-indigo-900 rounded border border-gray-600 focus:border-indigo-500 text-base outline-none text-gray-700 dark:text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
          />
          <span class="text-sm"
            >For each <%= settings.store.cpu.per %>% it will cost <%=
            settings.store.cpu.cost %> coins</span
          >
        </div>
        <% } %> <% if (settings.store.memory.enabled) { %>
        <div class="mb-4">
          <label for="memory" class="leading-7 text-sm text-gray-400"
            >Memory&nbsp;<span
              class="bg-gray-100 text-gray-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300"
              ><%= current.memory %>MB/<%= total.memory %>MB</span
            ></label
          >
          <input
            type="text"
            id="memory"
            name="memory"
            class="w-full bg-white dark:bg-gray-600 dark:bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-indigo-900 rounded border border-gray-600 focus:border-indigo-500 text-base outline-none text-gray-700 dark:text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
          />
          <span class="text-sm"
            >For each <%= settings.store.memory.per %>MB it will cost <%=
            settings.store.memory.cost %> coins</span
          >
        </div>
        <% } %> <% if (settings.store.disk.enabled) { %>
        <div class="mb-4">
          <label for="disk" class="leading-7 text-sm text-gray-400"
            >Storage&nbsp;<span
              class="bg-gray-100 text-gray-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300"
              ><%= current.disk %>MB/<%= total.disk %>MB</span
            ></label
          >
          <input
            type="text"
            id="disk"
            name="disk"
            class="w-full bg-white dark:bg-gray-600 dark:bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-indigo-900 rounded border border-gray-600 focus:border-indigo-500 text-base outline-none text-gray-700 dark:text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
          />
          <span class="text-sm"
            >For each <%= settings.store.disk.per %>MB it will cost <%=
            settings.store.memory.cost %> coins</span
          >
        </div>
        <% } %> <% if (settings.store.servers.enabled) { %>
        <div class="mb-4">
          <label for="servers" class="leading-7 text-sm text-gray-400"
            >Servers&nbsp;<span
              class="bg-gray-100 text-gray-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300"
              ><%= current.servers %>/<%= total.servers %></span
            ></label
          >
          <input
            type="text"
            id="servers"
            name="servers"
            class="w-full bg-white dark:bg-gray-600 dark:bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-indigo-900 rounded border border-gray-600 focus:border-indigo-500 text-base outline-none text-gray-700 dark:text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
          />
          <span class="text-sm"
            >For each <%= settings.store.memory.per %> extra servers it will
            cost <%= settings.store.memory.cost %> coins</span
          >
        </div>
        <% } %>
        <button
          type="submit"
          class="text-white bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded text-lg"
        >
          Buy Resources
        </button>
      </div>
    </form>
  </section>
  <%- include('./components/footer') %>
</html>
